@page "/pkg-general-numbers"
@rendermode InteractiveServer

<PageTitle>@subject</PageTitle>

<FluentLayout>
    <PkgPageHeader Header="@subject"
                   HRefCode="@hRefCode"
                   Subject="@subject" />

    <FluentGrid>
        <FluentGridItem>
            <PkgNList />
        </FluentGridItem>
        <FluentGridItem>
            <PkgIsNumber/>
        </FluentGridItem>
    </FluentGrid>
</FluentLayout>

@code {
    private readonly string hRefCode = HRefCodeSource.General.CodeUrl("Extensions/Numbers.cs");
    private readonly string subject = "Number Extensions";
}
