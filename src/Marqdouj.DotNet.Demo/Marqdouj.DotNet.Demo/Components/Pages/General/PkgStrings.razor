@page "/pkg-general-strings"
@using Marqdouj.DotNet.General.Extensions
@rendermode InteractiveServer
@inject IDialogService DialogService

<PageTitle>@subject</PageTitle>

<FluentLayout>
    <PkgPageHeader Header="@subject"
                   HRefCode="@hRefCode"
                   Subject="@subject" />

    <FluentGrid>
        <FluentGridItem>
            <PkgStringsTruncate/>
        </FluentGridItem>
        <FluentGridItem>
            <PkgStringsCrLf/>
        </FluentGridItem>
        <FluentGridItem>
            <PkgStringsToNewLine/>
        </FluentGridItem>
    </FluentGrid>
</FluentLayout>

@code {
    private readonly string hRefCode = HRefCodeSource.General.CodeUrl("Extensions/Strings.cs");
    private readonly string subject = "String Extensions";
}
