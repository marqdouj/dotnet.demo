@page "/pkg-components-ui-theme-switch"
@rendermode InteractiveServer

<PageTitle>Components (Fluent) - Theme Switch</PageTitle>

<FluentLayout>
    <PkgPageHeader Header="@subject"
                   HRefCode="@hRefCode"
                   Subject="@subject">
        <FluentLabel>
            Component for toggling between light and dark themes.<br />
            NOTE: This component is also on the Home page in the Header (far right).
        </FluentLabel>
    </PkgPageHeader>

    <FluentCard AreaRestricted="false" MinimalStyle="true">
        <FluentLabel>Click on the button (component) to toggle the theme.</FluentLabel>
        <ThemeSwitch />
    </FluentCard>
</FluentLayout>

@code {
    private readonly string hRefCode = HRefCodeSource.ComponentsFluent.CodeUrl("Themes/ThemeSwitch.razor");
    private readonly string subject = "Theme Switch";
}
