@inherits LayoutComponentBase

<FluentLayout>
    <FluentHeader>
        <FluentStack VerticalAlignment="VerticalAlignment.Center">
            <FluentPersona Image="https://avatars.githubusercontent.com/u/16510416" ImageSize="36px"/>
            DotNet.Demo
        </FluentStack>
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu />
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter>
        <a href="https://learn.microsoft.com/en-us/aspnet/core/blazor" target="_blank">Blazor</a>
        <FluentSpacer />
        <a href="https://github.com/marqdouj/dotnet.demo" target="_blank">@copyright</a>
        <FluentSpacer />
        <a href="https://www.fluentui-blazor.net/" target="_blank">FluentUI</a>
    </FluentFooter>

    <FluentDialogProvider @rendermode="InteractiveServer" />
    <FluentToastProvider @rendermode="InteractiveServer" />
    <FluentTooltipProvider @rendermode="InteractiveServer" />
</FluentLayout>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

@code {
    private string copyright { get; } = $"© Douglas Marquardt {DateTime.Today.Year}";
}
