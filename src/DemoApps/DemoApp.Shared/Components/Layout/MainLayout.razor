@using DemoApp.Shared.Models
@inherits LayoutComponentBase

<FluentLayout>
    <FluentHeader>
        <FluentStack VerticalAlignment="VerticalAlignment.Center">
            <FluentPersona Image="@LinkExtensions.Avatar" ImageSize="36px" />
            @HRefRepository.Demo.Name()
        </FluentStack>
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu />
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter>
        <a href="@LinkExtensions.LearnBlazor" target="_blank">Blazor</a>
        <FluentSpacer />
        <a href="@HRefRepository.Demo.GitHub()" target="_blank">@LinkExtensions.Copyright</a>
        <FluentSpacer />
        <a href="@LinkExtensions.FluentBlazor" target="_blank">FluentUI</a>
    </FluentFooter>

    <FluentDialogProvider @rendermode="InteractiveServer" />
    <FluentToastProvider @rendermode="InteractiveServer" />
    <FluentTooltipProvider @rendermode="InteractiveServer" />
</FluentLayout>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

