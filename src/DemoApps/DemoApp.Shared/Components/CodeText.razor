<code class="@Class" style="@Style">
    @ChildContent
</code>

<style>
    code {
        font-family: Consolas,"courier new";
        color: blue;
        background-color: #f1f1f1;
        padding: 2px;
        font-size: 105%;
    }
</style>

@code {
    [Parameter]
    public string? Class { get; set; }

    [Parameter]
    public string? Style { get; set; }

	[Parameter]
	public RenderFragment? ChildContent { get; set; }
}
